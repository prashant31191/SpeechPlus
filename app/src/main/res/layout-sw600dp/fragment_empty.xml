<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_twisters"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/empty_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                tools:src="@drawable/cancel"/>

            <TextView
                android:id="@+id/empty_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/title_text_margin"
                android:layout_marginRight="@dimen/title_text_margin"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textSize="@dimen/title_size_tablet"
                android:textStyle="bold"
                tools:text="@string/empty_title"/>

            <TextView
                android:id="@+id/empty_subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/title_text_margin"
                android:layout_marginRight="@dimen/title_text_margin"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textSize="@dimen/title_size_tablet"
                tools:text="@string/favorites_subtitle"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_my_twisters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_margin_bottom"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:visibility="gone"
        android:layout_marginTop="@dimen/fab_margin"
        app:backgroundTint="@color/colorFabButtonNormal"
        app:rippleColor="@color/colorFabButtonRipple"
        app:srcCompat="@drawable/refresh"/>
</android.support.design.widget.CoordinatorLayout>